                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Monitorizaci√≥n continua</div>
                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Cuidados especializados</div>
                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Educaci√≥n familiar</div>
                  </div>
                </div>

                <div className="bg-purple-50 rounded-xl p-6 border-2 border-purple-200">
                  <h4 className="font-bold text-purple-800 mb-3 text-center">NOC</h4>
                  <p className="text-sm text-center text-gray-600">Resultados de Enfermer√≠a</p>
                  <div className="mt-4 space-y-2">
                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Eval√∫a efectividad</div>
                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Mide resultados</div>
                    <div className="text-xs bg-white rounded p-2">‚Ä¢ Ajusta intervenciones</div>
                  </div>
                </div>
              </div>

              {/* Patrones Funcionales */}
              <div className="mt-6">
                <h3 className="text-lg font-bold text-gray-800 mb-4">Patrones Funcionales de Salud (Gordon)</h3>
                <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
                  {[
                    'Percepci√≥n-Salud', 'Nutricional-Metab√≥lico', 'Eliminaci√≥n', 'Actividad-Ejercicio',
                    'Sue√±o-Descanso', 'Cognitivo-Perceptual', 'Autopercepci√≥n', 'Rol-Relaciones',
                    'Sexualidad', 'Adaptaci√≥n-Tolerancia', 'Valores-Creencias'
